{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "composite": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "**/*.d.ts",
    "dist/**/*"
  ]
}
